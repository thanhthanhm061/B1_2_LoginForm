<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Danh Sách Đặt Chỗ</title>
  <style>
    .pending { color: yellow; }
    .confirmed { color: green; }
    .cancelled { color: red; }
  </style>
</head>
<body>
  <h1>Danh Sách Đặt Chỗ</h1>
  <table>
    <thead>
      <tr>
        <th>ID</th>
        <th>Tên Khách Hàng</th>
        <th>Ngày</th>
        <th>Giờ</th>
        <th>Trạng Thái</th>
      </tr>
    </thead>
    <tbody>
      <% bookings.forEach(booking => { %>
      <tr>
        <td><%= booking._id %></td>
        <td><%= booking.customerName %></td>
        <td><%= booking.date.toISOString().slice(0, 10) %></td>
        <td><%= booking.time %></td>
        <td class="<%= booking.status.toLowerCase() %>"><%= booking.status %></td>
      </tr>
      <% }) %>
    </tbody>
  </table>
</body>
</html>
